    <servlet>
        <servlet-name>ControladorDocentes</servlet-name>
        <servlet-class>co.osorio.controlador.ControladorDocentes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorEstudiante</servlet-name>
        <servlet-class>co.osorio.controlador.ControladorEstudiante</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarDocentes</servlet-name>
        <servlet-class>co.osorio.controlador.ListarDocentes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrganizacionAcademica</servlet-name>
        <servlet-class>co.osorio.controlador.OrganizacionAcademica</servlet-class>
    </servlet>
    <servlet>
