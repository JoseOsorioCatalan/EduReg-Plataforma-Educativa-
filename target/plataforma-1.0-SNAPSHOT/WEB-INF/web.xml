        <servlet-name>AsignacionPorGrupos</servlet-name>
        <url-pattern>/AsignacionPorGrupos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAgregarEventos</servlet-name>
        <url-pattern>/ServletAgregarEventos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
