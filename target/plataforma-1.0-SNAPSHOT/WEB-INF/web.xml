    <servlet>
        <servlet-name>ServletAgregarEventos</servlet-name>
        <servlet-class>co.osorio.servlets.ServletAgregarEventos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorDocentes</servlet-name>
        <url-pattern>/ControladorDocentes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorEstudiante</servlet-name>
        <url-pattern>/ControladorEstudiante</url-pattern>
