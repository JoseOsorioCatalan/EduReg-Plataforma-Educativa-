        <servlet-name>ServletGuardarEstudiantes</servlet-name>
        <servlet-class>co.osorio.controlador.ServletGuardarEstudiantes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPrueba</servlet-name>
        <servlet-class>co.osorio.controlador.ServletPrueba</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AsignacionPorGrupos</servlet-name>
        <servlet-class>co.osorio.servlets.AsignacionPorGrupos</servlet-class>
