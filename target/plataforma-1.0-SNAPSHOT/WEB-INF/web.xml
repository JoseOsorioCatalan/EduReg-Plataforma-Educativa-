    <servlet-mapping>
        <servlet-name>ServletGuardarEstudiantes</servlet-name>
        <url-pattern>/ServletGuardarEstudiantes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPrueba</servlet-name>
